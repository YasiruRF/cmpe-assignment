end 
// expected G[ 0 ]
initial
begin
	G_expected[0] = 1'bX;
end 
// generate trigger
always @(G_expected or G)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
