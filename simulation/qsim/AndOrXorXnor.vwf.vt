`timescale 1 ps/ 1 ps
module AndOrXorXnor_vlg_sample_tst(
	A,
	B,
	S0,
	S1,
	sampler_tx
);
input [3:0] A;
input [3:0] B;
input  S0;
input  S1;
output sampler_tx;

reg sample;
time current_time;
always @(A or B or S0 or S1)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module AndOrXorXnor_vlg_check_tst (
	G,
	sampler_rx
);
input [3:0] G;
input sampler_rx;

reg [3:0] G_expected;

reg [3:0] G_prev;

reg [3:0] G_expected_prev;

reg [3:0] last_G_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:1] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	G_prev = G;
end

// update expected /o prevs

always @(trigger)
begin
	G_expected_prev = G_expected;
end


// expected G[ 3 ]
initial
begin
	G_expected[3] = 1'bX;
end 
// expected G[ 2 ]
